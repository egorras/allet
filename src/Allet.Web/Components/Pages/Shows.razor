@page "/shows"
@page "/shows/{ProductionId:int}"
@rendermode InteractiveServer
@using Allet.Web.Data
@using Allet.Web.Models
@using Microsoft.EntityFrameworkCore
@inject AlletDbContext Db

<PageTitle>Shows - Allet</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Shows</h1>
    <div class="d-flex align-items-center gap-2">
        <button class="btn btn-sm btn-outline-secondary" @onclick="PreviousMonth">&laquo;</button>
        <strong>@currentMonth.ToString("MMMM yyyy")</strong>
        <button class="btn btn-sm btn-outline-secondary" @onclick="NextMonth">&raquo;</button>
        <button class="btn btn-sm btn-outline-primary ms-2" @onclick="GoToToday">Today</button>
    </div>
</div>

@if (production is not null)
{
    <p>Showing performances for <strong>@production.Title</strong>
        <a href="shows" class="ms-2 btn btn-sm btn-outline-secondary">Clear filter</a>
    </p>
}

@if (allTags.Count > 0)
{
    <div class="mb-3 d-flex flex-wrap align-items-center gap-2">
        <span class="text-muted small me-1">Tags:</span>
        @foreach (var tag in allTags)
        {
            var t = tag;
            <button class="btn btn-sm @(selectedTags.Contains(t) ? "btn-primary" : "btn-outline-secondary")"
                    @onclick="() => ToggleTag(t)">
                @t
            </button>
        }
        @if (selectedTags.Count > 0)
        {
            <button class="btn btn-sm btn-link text-decoration-none" @onclick="ClearTags">Clear</button>
        }
    </div>
}

@if (shows is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="calendar-grid">
        <div class="calendar-header">Mon</div>
        <div class="calendar-header">Tue</div>
        <div class="calendar-header">Wed</div>
        <div class="calendar-header">Thu</div>
        <div class="calendar-header">Fri</div>
        <div class="calendar-header">Sat</div>
        <div class="calendar-header">Sun</div>

        @foreach (var day in calendarDays)
        {
            var isToday = day.Date == DateOnly.FromDateTime(DateTime.Today);
            var isCurrentMonth = day.Date.Month == currentMonth.Month && day.Date.Year == currentMonth.Year;
            <div class="calendar-day @(isCurrentMonth ? "" : "other-month") @(isToday ? "today" : "")">
                <div class="day-number">@day.Date.Day</div>
                @foreach (var show in day.Shows)
                {
                    <a href="productions/@show.ProductionId" class="calendar-event" title="@show.Title â€” @show.Venue?.Name @(show.Date?.ToString("HH:mm"))">
                        <span class="event-time">@show.Date?.ToString("HH:mm")</span>
                        @show.Title
                    </a>
                }
            </div>
        }
    </div>
}

<style>
    .calendar-grid {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        border: 1px solid var(--bs-border-color, #dee2e6);
        border-radius: .375rem;
        overflow: hidden;
    }

    .calendar-header {
        background: var(--bs-tertiary-bg, #f8f9fa);
        padding: .5rem;
        text-align: center;
        font-weight: 600;
        font-size: .85rem;
        border-bottom: 1px solid var(--bs-border-color, #dee2e6);
    }

    .calendar-day {
        min-height: 100px;
        padding: .25rem .4rem;
        border-right: 1px solid var(--bs-border-color, #dee2e6);
        border-bottom: 1px solid var(--bs-border-color, #dee2e6);
        font-size: .8rem;
        overflow: hidden;
    }

    .calendar-day:nth-child(7n+7) {
        border-right: none;
    }

    .calendar-day.other-month {
        background: var(--bs-tertiary-bg, #f8f9fa);
        opacity: .5;
    }

    .calendar-day.today {
        background: rgba(var(--bs-primary-rgb, 13,110,253), .06);
    }

    .day-number {
        font-weight: 600;
        margin-bottom: .2rem;
    }

    .today .day-number {
        color: var(--bs-primary, #0d6efd);
    }

    .calendar-event {
        display: block;
        padding: .1rem .3rem;
        margin-bottom: .15rem;
        border-radius: .2rem;
        background: var(--bs-primary, #0d6efd);
        color: white !important;
        text-decoration: none;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-size: .75rem;
        line-height: 1.4;
    }

    .calendar-event:hover {
        opacity: .85;
    }

    .event-time {
        font-weight: 600;
        margin-right: .2rem;
    }
</style>

@code {
    [Parameter] public int? ProductionId { get; set; }

    private List<Show>? shows;
    private Production? production;
    private DateTime currentMonth = new(DateTime.UtcNow.Year, DateTime.UtcNow.Month, 1, 0, 0, 0, DateTimeKind.Utc);
    private List<CalendarDay> calendarDays = [];
    private List<string> allTags = [];
    private HashSet<string> selectedTags = [];

    protected override async Task OnInitializedAsync()
    {
        if (ProductionId.HasValue)
        {
            production = await Db.Productions.FindAsync(ProductionId.Value);
        }

        allTags = await Db.Productions
            .Where(p => p.Tags != null && p.Tags != "")
            .Select(p => p.Tags!)
            .ToListAsync();
        allTags = allTags
            .SelectMany(t => t.Split(',', StringSplitOptions.TrimEntries | StringSplitOptions.RemoveEmptyEntries))
            .Distinct()
            .OrderBy(t => t)
            .ToList();

        await LoadShows();
    }

    private async Task LoadShows()
    {
        var startOfMonth = currentMonth;
        var endOfMonth = currentMonth.AddMonths(1);

        // Extend to cover the full calendar grid (Mon-Sun weeks)
        var gridStart = startOfMonth.AddDays(-(((int)startOfMonth.DayOfWeek + 6) % 7));
        var gridEnd = endOfMonth.AddDays((7 - ((int)endOfMonth.DayOfWeek + 6) % 7) % 7);

        var query = Db.Shows
            .Include(s => s.Venue)
            .Include(s => s.Production)
            .Where(s => s.Date >= gridStart && s.Date < gridEnd);

        if (ProductionId.HasValue)
        {
            query = query.Where(s => s.ProductionId == ProductionId.Value);
        }

        shows = await query.OrderBy(s => s.Date).ToListAsync();

        BuildCalendar(gridStart, gridEnd);
    }

    private void BuildCalendar(DateTime gridStart, DateTime gridEnd)
    {
        calendarDays = [];
        var filtered = (shows ?? []).Where(s => s.Date.HasValue);
        if (selectedTags.Count > 0)
        {
            filtered = filtered.Where(s =>
            {
                var tags = s.Production?.Tags;
                if (string.IsNullOrEmpty(tags)) return false;
                var showTags = tags.Split(',', StringSplitOptions.TrimEntries | StringSplitOptions.RemoveEmptyEntries);
                return selectedTags.Any(t => showTags.Contains(t));
            });
        }
        var lookup = filtered
            .GroupBy(s => DateOnly.FromDateTime(s.Date!.Value))
            .ToDictionary(g => g.Key, g => g.ToList());

        for (var d = gridStart; d < gridEnd; d = d.AddDays(1))
        {
            var dateOnly = DateOnly.FromDateTime(d);
            calendarDays.Add(new CalendarDay
            {
                Date = dateOnly,
                Shows = lookup.TryGetValue(dateOnly, out var list) ? list : []
            });
        }
    }

    private async Task PreviousMonth()
    {
        currentMonth = currentMonth.AddMonths(-1);
        await LoadShows();
    }

    private async Task NextMonth()
    {
        currentMonth = currentMonth.AddMonths(1);
        await LoadShows();
    }

    private async Task GoToToday()
    {
        currentMonth = new DateTime(DateTime.UtcNow.Year, DateTime.UtcNow.Month, 1, 0, 0, 0, DateTimeKind.Utc);
        await LoadShows();
    }

    private void ToggleTag(string tag)
    {
        if (!selectedTags.Remove(tag))
            selectedTags.Add(tag);
        RebuildCalendar();
    }

    private void ClearTags()
    {
        selectedTags.Clear();
        RebuildCalendar();
    }

    private void RebuildCalendar()
    {
        var startOfMonth = currentMonth;
        var endOfMonth = currentMonth.AddMonths(1);
        var gridStart = startOfMonth.AddDays(-(((int)startOfMonth.DayOfWeek + 6) % 7));
        var gridEnd = endOfMonth.AddDays((7 - ((int)endOfMonth.DayOfWeek + 6) % 7) % 7);
        BuildCalendar(gridStart, gridEnd);
    }

    private class CalendarDay
    {
        public DateOnly Date { get; set; }
        public List<Show> Shows { get; set; } = [];
    }
}
