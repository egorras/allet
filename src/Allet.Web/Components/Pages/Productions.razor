@page "/productions"
@using Allet.Web.Data
@using Allet.Web.Models
@using Microsoft.AspNetCore.Components.QuickGrid
@using Microsoft.EntityFrameworkCore
@inject AlletDbContext Db
@rendermode InteractiveServer

<PageTitle>Productions - Allet</PageTitle>

<h1>Productions</h1>
<p>Opera, ballet & theatre productions by season.</p>

<style>
    .production-item .status-action {
        opacity: 0;
        transition: opacity 0.2s;
    }

    .production-item:hover .status-action {
        opacity: 1;
    }
</style>

<div class="row g-2 align-items-end mb-3">
    <div class="col-md-3">
        <input type="search" class="form-control" placeholder="Search..." @bind="searchText" @bind:event="oninput" @bind:after="OnFilterChanged" />
    </div>
    <div class="col-auto">
        <select class="form-select" @bind="selectedSeason" @bind:after="OnFilterChanged">
            <option value="">All seasons</option>
            @foreach (var s in seasons)
            {
                <option value="@s">@s</option>
            }
        </select>
    </div>
    <div class="col-auto">
        <select class="form-select" @bind="selectedCategory" @bind:after="OnFilterChanged">
            <option value="">All categories</option>
            @foreach (var c in categories)
            {
                <option value="@c">@c</option>
            }
        </select>
    </div>
    <div class="col-auto">
        <select class="form-select" @bind="sortBy" @bind:after="OnFilterChanged">
            <option value="title-asc">Title (A–Z)</option>
            <option value="title-desc">Title (Z–A)</option>
            <option value="newest">Newest first</option>
            <option value="date-asc">Date (Earliest first)</option>
            <option value="season">Season</option>
        </select>
    </div>
    <div class="col-auto">
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-sm @(viewMode == "gallery" ? "btn-primary" : "btn-outline-primary")" @onclick='() => viewMode = "gallery"'>Gallery</button>
            <button type="button" class="btn btn-sm @(viewMode == "table" ? "btn-primary" : "btn-outline-primary")" @onclick='() => viewMode = "table"'>Table</button>
        </div>
    </div>
    <div class="col-auto">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="showWatchedToggle" @bind="showWatched" @bind:after="OnFilterChanged" />
            <label class="form-check-label" for="showWatchedToggle">Watched</label>
        </div>
    </div>
    <div class="col-auto">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="showPlannedToggle" @bind="showPlanned" @bind:after="OnFilterChanged" />
            <label class="form-check-label" for="showPlannedToggle">Planned</label>
        </div>
    </div>
    <div class="col-auto">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="showArchivedToggle" @bind="showArchived" @bind:after="OnFilterChanged" />
            <label class="form-check-label" for="showArchivedToggle">Archived</label>
        </div>
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-secondary btn-sm" @onclick="ClearFilters">Clear</button>
    </div>
</div>

@if (productions is null)
{
    <p><em>Loading...</em></p>
}
else if (productions.Count == 0)
{
    <div class="alert alert-info mt-3">No productions found.</div>
}
else if (viewMode == "gallery")
{
    <div class="row mt-3">
        @foreach (var production in productions)
        {
            var userStatus = userActivities.TryGetValue(production.Id, out var activity) ? activity.Status : ProductionUserStatus.None;
            var isArchived = userStatus == ProductionUserStatus.Archived;
            var isWatched = userStatus == ProductionUserStatus.Watched;
            var isPlanned = userStatus == ProductionUserStatus.Planned;
            var dates = production.Shows.Where(s => s.Date.HasValue).Select(s => s.Date!.Value).OrderBy(d => d).ToList();
            var venues = production.Shows.Where(s => s.Venue != null).Select(s => s.Venue!.Name).Distinct().ToList();
            <div class="col-md-4 col-lg-3 mb-4 production-item">
                <div class="card h-100 @(isArchived ? "border-warning" : "")">
                    @if (!string.IsNullOrEmpty(production.ImageUrl))
                    {
                        <img src="@production.ImageUrl" class="card-img-top" alt="@production.Title" style="height: 200px; object-fit: cover; @(isArchived ? "opacity: 0.6;" : "")" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            <a href="productions/@production.Id" class="text-decoration-none">@production.Title</a>
                            @if (isArchived)
                            {
                                <span class="badge bg-secondary text-white ms-1">Archived</span>
                            }
                            @if (isWatched)
                            {
                                <span class="badge bg-success text-white ms-1">Watched</span>
                            }
                            @if (isPlanned)
                            {
                                <span class="badge bg-info text-dark ms-1">Planned</span>
                            }
                        </h5>
                        <p class="card-text text-muted mb-1">@production.Season</p>
                        @if (venues.Count > 0)
                        {
                            <p class="card-text text-muted mb-1">@string.Join(", ", venues)</p>
                        }
                        @if (dates.Count > 0)
                        {
                            <p class="card-text text-muted mb-1">
                                @if (dates.First().Date == dates.Last().Date)
                                {
                                    @dates.First().ToString("d MMM yyyy")
                                }
                                else
                                {
                                    @($"{dates.First():d MMM yyyy} – {dates.Last():d MMM yyyy}")
                                }
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(production.Category))
                        {
                            <p class="card-text mb-1">
                                <span class="badge bg-primary">@production.Category</span>
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(production.Tags))
                        {
                            <p class="card-text mb-2">
                                @foreach (var tag in production.Tags.Split(',', StringSplitOptions.TrimEntries))
                                {
                                    <span class="badge bg-info text-dark me-1">@tag</span>
                                }
                            </p>
                        }
                        <div class="mt-auto">
                            <span class="badge bg-secondary mb-2">@production.Shows.Count show(s)</span>
                            <div class="d-flex justify-content-end gap-1 status-action">
                                <button class="btn btn-sm @(isWatched ? "btn-success" : "btn-outline-success")" @onclick="() => SetStatus(production.Id, ProductionUserStatus.Watched)" title="Mark as Watched">
                                    <i class="bi bi-check-lg"></i> Watched
                                </button>
                                <button class="btn btn-sm @(isPlanned ? "btn-info" : "btn-outline-info")" @onclick="() => SetStatus(production.Id, ProductionUserStatus.Planned)" title="Mark as Planned">
                                    <i class="bi bi-calendar-event"></i> Planned
                                </button>
                                <button class="btn btn-sm @(isArchived ? "btn-secondary" : "btn-outline-secondary")" @onclick="() => SetStatus(production.Id, isArchived ? ProductionUserStatus.None : ProductionUserStatus.Archived)" title="Archive">
                                    <i class="bi bi-archive"></i> Archive
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="table-responsive mt-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Season</th>
                    <th>Category</th>
                    <th>Venue</th>
                    <th>Dates</th>
                    <th>Shows</th>
                    <th>Running Time</th>
                    @if (showArchived)
                    {
                        <th>Status</th>
                    }
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in productions)
                {
                    var userStatus = userActivities.TryGetValue(p.Id, out var activity) ? activity.Status : ProductionUserStatus.None;
                    var isArchived = userStatus == ProductionUserStatus.Archived;
                    var dates = p.Shows.Where(s => s.Date.HasValue).Select(s => s.Date!.Value).OrderBy(d => d).ToList();
                    var venues = p.Shows.Where(s => s.Venue != null).Select(s => s.Venue!.Name).Distinct().ToList();
                    <tr class="production-item">
                        <td><a href="productions/@p.Id">@p.Title</a></td>
                        <td>@p.Season</td>
                        <td>@p.Category</td>
                        <td>@string.Join(", ", venues)</td>
                        <td>
                            @if (dates.Count > 0)
                            {
                                if (dates.First().Date == dates.Last().Date)
                                {
                                    @dates.First().ToString("d MMM yyyy")
                                }
                                else
                                {
                                    @($"{dates.First():d MMM yyyy} – {dates.Last():d MMM yyyy}")
                                }
                            }
                        </td>
                        <td>@p.Shows.Count</td>
                        <td>@(p.RunningTimeMinutes.HasValue ? $"{p.RunningTimeMinutes} min" : "—")</td>
                        @if (showArchived || showWatched || showPlanned)
                        {
                            <td>
                                @if (userStatus == ProductionUserStatus.Archived)
                                {
                                    <span class="badge bg-secondary">Archived</span>
                                }
                                else if (userStatus == ProductionUserStatus.Watched)
                                {
                                    <span class="badge bg-success">Watched</span>
                                }
                                else if (userStatus == ProductionUserStatus.Planned)
                                {
                                    <span class="badge bg-info text-dark">Planned</span>
                                }
                            </td>
                        }
                        <td>
                             <div class="d-flex justify-content-end gap-1 status-action">
                                <button class="btn btn-sm @(userStatus == ProductionUserStatus.Watched ? "btn-success" : "btn-outline-success")" @onclick="() => SetStatus(p.Id, ProductionUserStatus.Watched)" title="Mark as Watched">
                                    W
                                </button>
                                <button class="btn btn-sm @(userStatus == ProductionUserStatus.Planned ? "btn-info" : "btn-outline-info")" @onclick="() => SetStatus(p.Id, ProductionUserStatus.Planned)" title="Mark as Planned">
                                    P
                                </button>
                                <button class="btn btn-sm @(userStatus == ProductionUserStatus.Archived ? "btn-secondary" : "btn-outline-secondary")" @onclick="() => SetStatus(p.Id, userStatus == ProductionUserStatus.Archived ? ProductionUserStatus.None : ProductionUserStatus.Archived)" title="Archive">
                                    A
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}



@code {
    private const string currentUserId = "default";
    private List<Production>? productions;
    private Dictionary<int, UserProductionActivity> userActivities = [];
    private List<string> seasons = [];
    private List<string> categories = [];

    private string searchText = "";
    private string selectedSeason = "";
    private string selectedCategory = "";
    private string sortBy = "title-asc";
    private string viewMode = "gallery";
    private bool showArchived;
    private bool showWatched;
    private bool showPlanned;



    protected override async Task OnInitializedAsync()
    {
        seasons = await Db.Productions.Select(p => p.Season).Distinct().OrderBy(s => s).ToListAsync();
        categories = await Db.Productions.Select(p => p.Category!).Where(c => c != null).Distinct().OrderBy(c => c).ToListAsync();

        await LoadProductionsAsync();
    }

    private async Task LoadProductionsAsync()
    {
        var query = Db.Productions.AsNoTracking()
            .Include(p => p.Shows).ThenInclude(s => s.Venue)
            .AsSplitQuery()
            .AsQueryable();

        // Load user activities first to filter in memory if necessary, or check logic
        // For efficiency, we might want to filter in database if possible, but status is complex.
        // Let's load activities for current user and use that to filter IDs.
        
        var myActivities = await Db.UserActivities
            .Where(a => a.UserId == currentUserId)
            .ToListAsync();
            
        userActivities = myActivities.ToDictionary(a => a.ProductionId);

        if (!showArchived)
            query = query.Where(p => !Db.UserActivities.Any(a => a.ProductionId == p.Id && a.UserId == currentUserId && a.Status == ProductionUserStatus.Archived));
        
        // Note: Watched/Planned filtering logic could be additive or restrictive.
        // Assuming "showWatched" means *include* watched items (which are usually included unless archived).
        // If the user wants to filter *only* watched items, the UI would be different.
        // Current logic: Standard view hides Archived. Toggles can show specific types.
        
        // Let's adjust: "Show Archived" toggles visibility of archived items.
        // "Show Watched" / "Show Planned" -> if checked, we MIGHT filter to ONLY those?
        // Or are they just filters on top?
        // Based on typical UI:
        // - Default: Show active (None, Watched, Planned) - wait, Watched might be considered "done".
        // Let's assume standard feed shows everything except Archived.
        // If "Watched" toggle is ON, maybe we filter to ONLY watched? Or just ensure they are visible?
        // Let's stick to: "Show Archived" allows archived items to appear.
        // "Watched" / "Planned" filters: if any active, filter to those types.
        
        if (showWatched || showPlanned)
        {
             var allowedStatuses = new List<ProductionUserStatus>();
             if (showWatched) allowedStatuses.Add(ProductionUserStatus.Watched);
             if (showPlanned) allowedStatuses.Add(ProductionUserStatus.Planned);
             // If archived is also checked, include it?
             if (showArchived) allowedStatuses.Add(ProductionUserStatus.Archived);
             
             // If we filter by status, we need to match status.
             // This requires joining or subquery.
             query = query.Where(p => Db.UserActivities.Any(a => a.ProductionId == p.Id && a.UserId == currentUserId && allowedStatuses.Contains(a.Status)));
        }
        else if (!showArchived)
        {
             // Default behavior: verify logic.
             // If not showing archived, exclude Archive status.
             query = query.Where(p => !Db.UserActivities.Any(a => a.ProductionId == p.Id && a.UserId == currentUserId && a.Status == ProductionUserStatus.Archived));
        }

        if (!string.IsNullOrWhiteSpace(searchText))
            query = query.Where(p => p.Title.ToLower().Contains(searchText.ToLower()));
        if (!string.IsNullOrEmpty(selectedSeason))
            query = query.Where(p => p.Season == selectedSeason);
        if (!string.IsNullOrEmpty(selectedCategory))
            query = query.Where(p => p.Category == selectedCategory);

        query = sortBy switch
        {
            "title-desc" => query.OrderByDescending(p => p.Title),
            "newest" => query.OrderByDescending(p => p.CreatedAt),
            "date-asc" => query.OrderBy(p => p.Shows.Min(s => s.Date)),
            "season" => query.OrderByDescending(p => p.Season).ThenBy(p => p.Title),
            _ => query.OrderBy(p => p.Title),
        };

        productions = await query.ToListAsync();


    }

    private async Task OnFilterChanged() => await LoadProductionsAsync();

    private async Task ClearFilters()
    {
        searchText = "";
        selectedSeason = "";
        selectedCategory = "";
        sortBy = "title-asc";
        showArchived = false;
        showWatched = false;
        showPlanned = false;
        await LoadProductionsAsync();
    }

    private async Task SetStatus(int productionId, ProductionUserStatus status)
    {
        var activity = await Db.UserActivities
            .FirstOrDefaultAsync(a => a.ProductionId == productionId && a.UserId == currentUserId);

        if (status == ProductionUserStatus.None)
        {
            if (activity is not null)
            {
                Db.UserActivities.Remove(activity);
            }
        }
        else
        {
            if (activity is null)
            {
                activity = new UserProductionActivity
                {
                    ProductionId = productionId,
                    UserId = currentUserId,
                    Status = status
                };
                Db.UserActivities.Add(activity);
            }
            else
            {
                activity.Status = status;
                activity.UpdatedAt = DateTime.UtcNow;
            }
        }
        
        await Db.SaveChangesAsync();
        await LoadProductionsAsync();
    }
    
    // Legacy methods removed or replaced by SetStatus
}
