@page "/"

<PageTitle>Allet - Dashboard</PageTitle>

<h1>Allet</h1>
<p class="lead">Opera, ballet & show tracker</p>

<div class="row mt-4">
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Shows</h5>
                <p class="card-text">Browse and track upcoming opera, ballet, and theatre performances.</p>
                <a href="shows" class="btn btn-primary">Browse Shows</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Subscriptions</h5>
                <p class="card-text">Set up price and seat availability watches for your favourite shows.</p>
                <a href="subscriptions" class="btn btn-primary">Manage Watches</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Settings</h5>
                <p class="card-text">Configure Telegram notifications and other preferences.</p>
                <a href="settings" class="btn btn-primary">Settings</a>
            </div>
        </div>
    </div>
</div>
